<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".HeroDesActivity" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="45dp" 
        android:scrollbars="none">
        <RelativeLayout
            android:layout_width="match_parent"
    		android:layout_height="match_parent">
            
       
    <ImageView
        android:id="@+id/iv_des_hero"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/archer" />

    <TextView
        android:id="@+id/tv_des_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_des_hero"
        android:layout_below="@+id/iv_des_hero"
        android:text="TextView"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_des_name"
        android:layout_below="@+id/tv_des_name"
        android:text="定位"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_des_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignRight="@+id/iv_des_hero"
        android:text="AD"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:text="法术" 
        android:textSize="20dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:text="团队" 
        android:textSize="20dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:text="操作" 
        android:textSize="20dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignTop="@+id/iv_des_hero"
        android:text="生命"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/iv_des_shengming"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:src="#ff0000" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="5dp"
        android:text="攻击"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/iv_des_gongji"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_alignLeft="@+id/iv_des_shengming"
        android:layout_alignBottom="@+id/textView4"
        android:src="#ff6600" />

    <ImageView
        android:id="@+id/iv_des_fashu"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_alignLeft="@+id/iv_des_gongji"
        android:layout_alignBottom="@+id/textView5"
        android:src="#0099ff" />

    <ImageView
        android:id="@+id/iv_des_tuandui"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_alignLeft="@+id/iv_des_fashu"
        android:layout_alignBottom="@+id/textView6"
        android:src="#00ff00" />

    <ImageView
        android:id="@+id/iv_des_caozuo"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_alignLeft="@+id/iv_des_tuandui"
        android:layout_alignBottom="@+id/textView7"
        android:src="#ffff00" />

    <TextView
        android:id="@+id/tv_des_shengming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/iv_des_shengming"
        android:text="10" 
        android:textSize="20dp"/>
    
    <TextView
        android:id="@+id/tv_des_gongji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/iv_des_gongji"
        android:text="10" 
        android:textSize="20dp"/>
    
    <TextView
        android:id="@+id/tv_des_fashu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/iv_des_fashu"
        android:text="10" 
        android:textSize="20dp"/>
    
    <TextView
        android:id="@+id/tv_des_tuandui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/iv_des_tuandui"
        android:text="10" 
        android:textSize="20dp"/>
    
    <TextView
        android:id="@+id/tv_des_caozuo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/iv_des_caozuo"
        android:text="10" 
        android:textSize="20dp"/>

    
        <TextView
            android:id="@+id/tv_yingxiongjianjie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="10dp"
            android:text="英雄简介"
            android:textSize="20sp" />
        
        <TextView
            android:id="@+id/tv_des_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv_yingxiongjianjie"
            android:layout_marginTop="10dp"
            android:text="TextView" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
