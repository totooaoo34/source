<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EquipDetailActivity" >

    <ScrollView
        android:id="@+id/scrollView_equip_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
        <ImageView
		    android:id="@+id/iv_des_equip"
		    android:layout_width="100dp"
		    android:layout_height="100dp"
		    android:layout_alignParentLeft="true"
		    android:layout_alignParentTop="true"
		    android:src="@drawable/shifu" />
		<TextView
		    android:id="@+id/tv_des_equip_name"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignTop="@+id/iv_des_equip"
		    android:layout_marginLeft="10dp"
		    android:layout_toRightOf="@+id/iv_des_equip"
		    android:text="名称"
		    android:textSize="20dp" />
		<TextView
		    android:id="@+id/tv_wupinzongjia"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignLeft="@+id/tv_des_equip_name"
		    android:layout_below="@+id/tv_des_equip_name"
		    android:text="物品总价:" />

		<TextView
		    android:id="@+id/tv_des_equip_price"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignBaseline="@+id/tv_wupinzongjia"
		    android:layout_alignBottom="@+id/tv_wupinzongjia"
		    android:layout_marginLeft="5dp"
		    android:layout_toRightOf="@+id/tv_wupinzongjia"
		    android:text="200" />

		<TextView
		    android:id="@+id/tv_des_equip_data1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="10dp"
		    android:layout_toRightOf="@+id/iv_des_equip"
		    android:layout_below="@+id/tv_wupinzongjia"
		    android:text="TextView" />
		<TextView
		    android:id="@+id/tv_des_equip_data2"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="10dp"
		    android:layout_toRightOf="@+id/iv_des_equip"
		    android:layout_below="@+id/tv_des_equip_data1"
		    android:text="TextView" />
		<TextView
		    android:id="@+id/tv_des_equip_data3"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="10dp"
		    android:layout_toRightOf="@+id/iv_des_equip"
		    android:layout_below="@+id/tv_des_equip_data2"
		    android:text="TextView" />
		<TextView
		    android:id="@+id/tv_des_equip_data4"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="10dp"
		    android:layout_toRightOf="@+id/iv_des_equip"
		    android:layout_below="@+id/tv_des_equip_data3"
		    android:text="TextView" />
		<TextView
		    android:id="@+id/tv_des_equip_data5"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="100dp"
		    android:layout_toRightOf="@+id/iv_des_equip"
		    android:layout_below="@+id/tv_wupinzongjia"
		    android:text="TextView" />
		<TextView
		    android:id="@+id/tv_des_equip_data6"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="100dp"
		    android:layout_toRightOf="@+id/iv_des_equip"
		    android:layout_below="@+id/tv_des_equip_data5"
		    android:text="TextView" />
		<TextView
		    android:id="@+id/tv_des_equip_data7"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="100dp"
		    android:layout_toRightOf="@+id/iv_des_equip"
		    android:layout_below="@+id/tv_des_equip_data6"
		    android:text="TextView" />
		<TextView
		    android:id="@+id/tv_des_equip_data8"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="100dp"
		    android:layout_toRightOf="@+id/iv_des_equip"
		    android:layout_below="@+id/tv_des_equip_data7"
		    android:text="TextView" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_wupinshuoming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="物品说明" />
        
        <TextView
            android:id="@+id/tv_des_equip_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_keyihecheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="可以合成" />
        <com.my.hero300.view.MyGridView
            android:id="@+id/gv_equip_eto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="3" >
        </com.my.hero300.view.MyGridView>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/tv_hechengxuyao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="合成需要" />
        <com.my.hero300.view.MyGridView
            android:id="@+id/gv_equip_efrom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="3" >
        </com.my.hero300.view.MyGridView>
    </LinearLayout>
    </LinearLayout>
	</ScrollView>
</LinearLayout>