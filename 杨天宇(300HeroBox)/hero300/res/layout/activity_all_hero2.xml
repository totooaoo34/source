<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AllHero2Activity" >

    <Button
        android:id="@+id/btn_biaoge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="表格浏览" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_below="@+id/btn_biaoge">

        <RadioGroup
            android:id="@+id/rg_selectposition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1" >
			<RadioButton
	            android:id="@+id/rb_ad"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:text="AD" />

			<RadioButton
			    android:id="@+id/rb_ap"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:text="AP" />
	
	        <RadioButton
	            android:id="@+id/rb_tank"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:text="Tank" />
	
	        <RadioButton
	            android:id="@+id/rb_all"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:text="All" />

        </RadioGroup>

        
    </LinearLayout>

    <com.my.hero300.view.GalleryView
        android:id="@+id/mygallery"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:spacing="20dp"
        android:unselectedAlpha="128" />
    
    
    <TextView
        android:id="@+id/tv_hero2_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mygallery"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="archer"
        android:textSize="20sp" />

    
</RelativeLayout>
