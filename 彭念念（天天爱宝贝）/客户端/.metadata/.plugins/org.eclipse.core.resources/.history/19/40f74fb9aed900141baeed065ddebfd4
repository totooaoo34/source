        // æŒ‡å®šä¸?¸ªç³»ç»Ÿè½¬åœºåŠ¨ç”» 
        ft.setTransition(FragmentTransaction.TRANSIT_FRAGMENT_OPEN);  
        newFragment.show(ft, mDialogTag);
        return newFragment;
    }
	
