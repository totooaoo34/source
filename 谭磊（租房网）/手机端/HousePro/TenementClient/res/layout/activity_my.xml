<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/back_mysoufun" />

    <LinearLayout
        android:id="@+id/ll_p_m_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <com.android.tenementclient.view.MyCircleImageView
            android:id="@+id/iv_user_img"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/video_connect_icon" />
    </LinearLayout>
    <!-- *************************************************************************** -->

    <LinearLayout
        android:id="@+id/ll_m_01"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignBottom="@+id/imageView1"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/rl_waicen"
            android:layout_width="match_parent"
            android:layout_height="48dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:alpha="0.2"
                android:background="@android:color/background_dark" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/ll_m_02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingTop="4dp" >

                    <TextView
                        android:id="@+id/tv_m_mess"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:text="消息"
                        android:textColor="#ffffff"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tv_m_mess_number"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="15dp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:src="@drawable/city_search_bg" />

                <LinearLayout
                    android:id="@+id/ll_m_03"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingTop="4dp" >

                    <TextView
                        android:id="@+id/tv_m_momey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="我的钱"
                        android:textColor="@color/white"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tv_m_momey_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="￥0.0"
                        android:textColor="@color/white"
                        android:textSize="15dp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:src="@drawable/city_search_bg" />

                <RelativeLayout
                    android:id="@+id/ll_m_03"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="4dp" >

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/tv_m_momey"
                        android:layout_toRightOf="@+id/tv_m_momey"
                        android:src="@drawable/jifen_hot" />

                    <TextView
                        android:id="@+id/tv_m_momey_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_m_momey"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tv_m_momey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:text="积分"
                        android:textColor="@color/white"
                        android:textSize="15dp" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_p_m_message"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView1"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:background="#fbf7ec"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="12dp"
                    android:text="还不是房天下俱乐部会员？赶快来"
                    android:textColor="#e24b4a" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="29dp"
                    android:text="加入吧！"
                    android:textColor="#e24b4a" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="29dp"
                    android:text="已加入469098人" />
            </RelativeLayout>

            <Button
                android:id="@+id/diy_now"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:background="@drawable/complete_bg"
                android:text="马上加入"
                android:textColor="#df3031"
                android:textSize="13dp" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ll_p_m_message"
        android:background="?android:attr/listDivider" />

    <Button
        android:id="@+id/diy_login"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_above="@+id/ll_m_01"
        android:layout_alignLeft="@+id/ll_p_m_phone"
        android:layout_alignRight="@+id/ll_p_m_phone"
        android:background="@drawable/bg_line"
        android:text="登 录"
        android:textColor="#df3031"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/tv_login_Struts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/diy_login"
        android:layout_centerHorizontal="true"
        android:text="未登录"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/iv_qrcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ll_p_m_phone"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/ll_p_m_phone"
        android:src="@drawable/scan_icon" />

     <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view1"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="10dp"
        android:text="会员特权介绍"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="15dp" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/textView6"
        android:layout_marginTop="30dp"
        android:background="@color/bg_color"
        android:orientation="horizontal" >

        <include layout="@layout/home_title_img"/>
    </LinearLayout>

</RelativeLayout>