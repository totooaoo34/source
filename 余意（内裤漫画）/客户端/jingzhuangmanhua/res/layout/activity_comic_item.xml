<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/remenborder"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/iv_home_item"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/watermark" />

                <TextView
                    android:id="@+id/tv_comicName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/iv_home_item"
                    android:text="神不在的星期天"
                    android:layout_marginLeft="5dp"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/tv_comicFmJiesao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/tv_comicName"
                    android:text="神在星期一创造世界,又在星期日舍弃世界"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="3dp"
                    android:textSize="8dp" />

                <TextView
                    android:id="@+id/tv_comicpage_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/tv_comicFmJiesao"
                    android:layout_alignRight="@+id/iv_home_item"
                    android:text="28话"
                    android:textSize="8dp" />
            </RelativeLayout>
        </LinearLayout>
</RelativeLayout>
