<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="match_parent"
                android:layout_height="192dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/remenborder"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/iv_home"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/shenfm" />

                <TextView
                    android:id="@+id/tv_comicTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/iv_home"
                    android:layout_marginLeft="5dp"
                    android:text="神不在的星期天"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/tv_intro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/tv_comicTitle"
                    android:layout_marginLeft="5dp"
                    android:text="神在星期一创造世界,又在星期日舍弃世界"
                    android:textSize="10dp"
                    android:layout_marginBottom="3dp"
                     />

                <TextView
                    android:id="@+id/tv_comicpage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/tv_intro"
                    android:layout_alignRight="@+id/iv_home"
                    android:text="28话"
                    android:textSize="10dp" />
            </RelativeLayout>
			
            <com.yuyi.myview.MyGridView
                android:id="@+id/gd_remen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                android:numColumns="2" >
            </com.yuyi.myview.MyGridView>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>